<h2>Clients</h2>

<div id="clients">
    <p><%= link_to 'Add new client', '#', :onclick => "show('new_client')" %></p>
    <div id="new_client" style="display:none">
        <form action="/admin/client" method="POST">
            <p>
                Name: <input type="text" name="name"/>
                Contact Name: <input type="text" name="contact_name"/>
                Contact Telephone: <input type="text" name="contact_telephone"/>
                <input type="submit" value="add"/> <%= link_to 'Cancel', '#', :onclick => "hide('new_client')" %>
            </p>
        </form>
    </div>
        
    <% @clients.each do |client| %>
        <div class="client" id="project_<%= client.id %>">
            <%= link_to client.name, "/admin/client/#{client.id}" %> | <%= link_to 'Delete', "/admin/client/#{client.id}/destroy" %>
        </div>
    <% end %>
</div>

<h2>Users</h2>

<div id="users">
    <p><%= link_to 'Add new user', '#', :onclick => "show('new_user')" %></p>
    <div id="new_user" style="display:none">
        <form action="/admin/user" method="POST">
            <p>
                Email: <input type="text" name="email"/>
                Password: <input type="password" name="password"/>
                <input type="submit" value="add"/> <%= link_to 'Cancel', '#', :onclick => "hide('new_user')" %>
            </p>
        </form>
    </div>
    
    <% @users.each do |user| %>
        <div class="user" id="project_<%= user.id %>">
            <%= user.email %> | <%= link_to 'Delete', "/admin/user/#{user.id}/destroy" %>
        </div>
    <% end %>
</div>